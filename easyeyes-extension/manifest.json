{
  "manifest_version": 3,
  "name": "EasyEyes",
  "version": "1.0",
  "description": "Accessibility tool for seniors - text size, TTS, translate.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"]
}